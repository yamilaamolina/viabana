@using ProyectoFinal.Models;

@model ModuloProveedores
@{
    ViewBag.Title = "Compra";
    //ViewBag.Proveedores = Model.ListaComboBox as IEnumerable<SelectListItem>;

}


<dl class="menulateral">
    @{ Html.RenderAction("Modulos", "Home"); }
</dl>

<div class="col-lg-12 informativo">

    <div>
        <button type="button" id="Nueva Compra" data-toggle="modal" data-target="#newCompra">
            Agregar Nueva Compra
        </button>
    </div>
    <table class="table table-hover" style="top: 25px; position:relative;">
        <tr>
            <td><strong>ID Compra</strong></td>
            <td><strong>Proveedor</strong></td>
            <td><strong>Monto</strong></td>
            <td><strong>Fecha</strong></td>
            <td></td>
            <td></td>
        </tr>
    </table>

    <div class="modal fade" id="newCompra" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="height:500px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div>
                        <span class="glyphicon glyphicon-user" style="margin-left: 0px; margin-top: 19px;position:absolute;"></span>
                        <h4 class="modal-title estiloHelvetica col-lg-5" id="myModalLabel" style="margin-left: 10px;">Nueva Compra</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="proveedor">Proveedor:</label>
                            @*@Html.DropDownList("Proveedores")*@
                        </div>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="producto">Producto</label>
                            <select>
                                <option>Seleccione producto</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="estiloHelveticaForm" for="cantidad">Cantidad</label>
                            <input class="form-control" type="number" id="cantidad" />
                        </div>
                        <div position:relative;">
                            <button type="button" class="btn proveedorButton" style="float:right; margin-left:10px;">
                                Cancelar
                            </button>
                        </div>
                        <div>
                            <button type="button" class="btn proveedorButton" style="float:right;" data-toggle="collapse">
                                Confirmar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
